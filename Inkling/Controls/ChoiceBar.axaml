<UserControl
	xmlns="https://github.com/avaloniaui"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:controls="clr-namespace:Inkling.Controls"
	x:Class="Inkling.Controls.ChoiceBar"
	x:DataType="controls:ChoiceBar"
>
	<StackPanel Spacing="10">
		<TextBlock
			Text="{Binding Label, RelativeSource={RelativeSource AncestorType={x:Type controls:ChoiceBar}}}"
			TextAlignment="Center"
			FontSize="24"
			FontWeight="Bold"
		/>
		<ItemsControl ItemsSource="{Binding ChoicesArray, RelativeSource={RelativeSource AncestorType={x:Type controls:ChoiceBar}}}">
			<ItemsControl.ItemTemplate>
				<DataTemplate x:DataType="controls:ChoiceBar+ChoiceBarChoice">
					<Button
						Margin="5"
						Padding="10"
						Width="200"
						BorderThickness="3"
						Background="{Binding BackgroundBrush}"
						Foreground="{Binding ForegroundBrush}"
						Click="OnChooseOption"
						Tag="{Binding Text}"
						BorderBrush="Black"
					>
						<Button.Styles>
							<Style
								Selector="Button:pointerover /template/ ContentPresenter#PART_ContentPresenter, Button:focus /template/ ContentPresenter#PART_ContentPresenter, Button:pressed /template/ ContentPresenter#PART_ContentPresenter"
							>
								<Setter Property="Background" Value="{Binding BackgroundBrush}"/>
								<Setter Property="Foreground" Value="{Binding ForegroundBrush}"/>
								<Setter Property="BorderBrush" Value="Black"/>
							</Style>
						</Button.Styles>
						<TextBlock
							Text="{Binding Text}"
							FontWeight="Bold"
							TextAlignment="Center"
						/>
					</Button>
				</DataTemplate>
			</ItemsControl.ItemTemplate>
			<ItemsControl.ItemsPanel>
				<ItemsPanelTemplate>
					<StackPanel
						Orientation="Horizontal"
						HorizontalAlignment="Center"
					/>
				</ItemsPanelTemplate>
			</ItemsControl.ItemsPanel>
		</ItemsControl>
	</StackPanel>
</UserControl>
