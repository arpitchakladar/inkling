<UserControl xmlns="https://github.com/avaloniaui"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:vm="clr-namespace:Inkling.ViewModels"
	x:Class="Inkling.Views.ToolView"
	x:DataType="vm:ToolViewModel"
>
	<StackPanel
		HorizontalAlignment="Center"
		Orientation="Vertical"
	>
		<Button
			HorizontalAlignment="Center"
			Content="GO BACK"
			Padding="40,10"
			Margin="0,0,0,20"
			Command="{Binding GoBackCommand}"
		/>
		<Grid
			HorizontalAlignment="Center"
			Height="400"
			Width="800"
			Margin="0,0,0,20"
		>
			<Rectangle
				Fill="Transparent"
				Stroke="{Binding Tool.Color}"
				StrokeThickness="3"
				StrokeDashArray="6,2"
				RadiusX="20"
				RadiusY="20"
			/>
			<StackPanel
				HorizontalAlignment="Center"
				VerticalAlignment="Center"
			>
				<TextBlock
					HorizontalAlignment="Center"
					VerticalAlignment="Center"
					FontSize="24"
					FontWeight="Bold"
					Foreground="{Binding Tool.Color}"
				>
					DROP FILES HERE
				</TextBlock>
			</StackPanel>
		</Grid>
		<Button
			HorizontalAlignment="Center"
			Content="{Binding Tool.Name}"
			Padding="40,10"
			Margin="0,0,0,20"
			Command="{Binding GoBackCommand}"
		/>
	</StackPanel>
</UserControl>
