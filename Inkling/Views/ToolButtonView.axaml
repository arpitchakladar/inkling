<UserControl xmlns="https://github.com/avaloniaui"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:vm="clr-namespace:Inkling.ViewModels"
	x:Class="Inkling.Views.ToolButtonView"
	x:DataType="vm:ToolButtonViewModel"
>
	<Button Height="400" Width="400" Background="{Binding Tool.Color}" Command="{Binding OpenToolCommand}">
		<StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
			<Path
				Data="M12,2A10,10 0 1 0 12,22A10,10 0 1 0 12,2Z"
				Fill="Black"
				Width="24"
				Height="24"
			/>
			<TextBlock
				Text="{ Binding Tool.Name }"
				FontWeight="Bold"
				FontSize="16"
				TextAlignment="Center"
				Margin="0,5,0,0"
			/>
			<TextBlock
				Text="{ Binding Tool.Description }"
				FontSize="12"
				TextAlignment="Center"
			/>
		</StackPanel>
	</Button>
</UserControl>
