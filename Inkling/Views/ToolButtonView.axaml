<UserControl xmlns="https://github.com/avaloniaui"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:vm="clr-namespace:Inkling.ViewModels"
	x:Class="Inkling.Views.ToolButtonView"
	x:DataType="vm:ToolButtonViewModel"
>
	<Border
		Height="200"
		Width="400"
		Padding="40"
		Background="Transparent"
		BorderBrush="{Binding Tool.Color}"
		BorderThickness="3"
		CornerRadius="20"
		BoxShadow="5 5 10 0 Gray"
		PointerPressed="BorderPointerPressed"
	>
		<StackPanel
			HorizontalAlignment="Left"
			VerticalAlignment="Top"
		>
			<Grid
				ColumnDefinitions="Auto,*"
				Margin="0,0,0,10"
				HorizontalAlignment="Stretch"
			>
				<Svg
					Width="48"
					Height="48"
					Margin="0,0,10,0"
					Path="{Binding Tool.Icon}"
					Css="{Binding Tool.Color, StringFormat='path {{ fill: {0}; }}'}"
				/>
				<TextBlock Grid.Column="1"
					Text="{Binding Tool.Name}"
					FontWeight="Bold"
					FontSize="24"
					TextAlignment="Left"
					VerticalAlignment="Center"
				/>
			</Grid>
			<TextBlock
				Text="{ Binding Tool.Description }"
				FontSize="16"
				TextAlignment="Left"
				TextWrapping="Wrap"
			/>
		</StackPanel>
	</Border>
</UserControl>
